@model IEnumerable<DebateLink>
@{
	Layout = "~/Views/Shared/_Ajax.cshtml";
}

@if( Model.Count() > 0 )
{
	foreach( DebateLink link in Model )
	{
		@Html.Partial( "_DebateBlockLink", link )
	}

	<div class="invisible LatestOfset@(Model.First().Type.ToString())">
		@(ViewBag.Offset + Model.Count())
	</div>
}
else
{
	<div class="row">
		<div class="col-md-11 col-md-offset-1">
			<div class="alert alert-success">
				<h4>That's all there is!</h4>
				<text>Unfortunately we have no more content left to show you!</text>
			</div>
		</div>
	</div>
}
