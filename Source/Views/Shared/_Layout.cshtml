			ga('create', '<?php echo Config_Site::GoogleAnalyticsTrackingID; ?>', '<?php echo Config_Site::GoogleAnalyticsSiteName; ?>');
			ga('send', 'pageview');

		</script>
	*@

</body>
</html>
