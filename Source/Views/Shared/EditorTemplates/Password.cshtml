@if( @ViewData.ModelMetadata.AdditionalValues[ "icon" ] != null )
{
	<div class="input-group">
		<span class="input-group-addon"><i class="fa fa-@ViewData.ModelMetadata.AdditionalValues[ "icon" ]"></i></span>
		@Html.Password( "", ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control password", placeholder = @ViewData.ModelMetadata.AdditionalValues[ "placeholder" ] ?? "" } )
	</div>

	@Html.ValidationMessageFor( m => m )
}
else
{
	@Html.Password( "", ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control password", placeholder = @ViewData.ModelMetadata.AdditionalValues[ "placeholder" ] ?? "" } )
	@Html.ValidationMessageFor( m => m )
}