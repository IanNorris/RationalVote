@{
	bool isAuthenticated = Context.User.Identity.IsAuthenticated;
	bool isAdmin = false;
	string userIdentity = null;
	long userID = 0;

	if( isAuthenticated )
	{
		isAdmin = Context.User.IsInRole( "Administrator" );

		userIdentity = ( (RationalVote.Models.UserPrincipal)Context.User ).User.Email;
		userID = ( (RationalVote.Models.UserPrincipal)Context.User ).User.Id;
	}
}
<script>
	UserVoice=window.UserVoice||[];(function(){var uv=document.createElement('script');uv.type='text/javascript';uv.async=true;uv.src='//widget.uservoice.com/1Fm3X2FXf5XVacZT422Q.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(uv,s)})();
	UserVoice.push(['set',{accent_color:'#448dd6',trigger_color:'white',trigger_background_color:'#448dd6'}]);
	@if( isAuthenticated ){<text>UserVoice.push(['identify',{email:'@userIdentity',id:@userID}]);</text>}
	UserVoice.push(['addTrigger',{mode:'smartvote',trigger_style:'tab'}]);
	UserVoice.push(['autoprompt',{}]);
</script>
