@model RationalVote.Models.ForgotPassword

@{
	ViewBag.Title = "Forgot your password?";
}

<div class="container-fluid">
	<div class="row-fluid col-wrap">
		<div class="col-md-4 col-md-offset-4">
			@using( Html.BeginForm( "ForgotPasswordPost", "User", null, FormMethod.Post, new { @class = "reg-page" } ) )
			{
				@Html.AntiForgeryToken()
				<div class="reg-header">
					<h2>Forgot your password?</h2>
				</div>

				@Html.ValidationSummary( true )

				<p>Please enter the e-mail address of the password you wish to reset.</p>

				<br />
				<br />

				@Html.EditorFor( model => model.RegisterEmail )

				<br />
				<br />

				<button id="signup" class="btn btn-lg btn-primary btn-block" type="submit">Send me a password reset e-mail</button>
			}
		</div>
	</div>
</div>

@section Scripts {
	@Scripts.Render( "~/Scripts/ThirdParty/jqueryval" )
	@Scripts.Render( "~/Scripts/ThirdParty/zxcvbn" )
}
