@model RationalVote.Models.ResetPassword

@{
	ViewBag.Title = "Reset your password";
}

<div class="container-fluid">
	<div class="row-fluid col-wrap">
		<div class="col-md-4 col-md-offset-4">
			@using( Html.BeginForm( "ResetPasswordPost", "User", null, FormMethod.Post, new { @class = "reg-page" } ) )
			{
				@Html.AntiForgeryToken()
				
				@Html.HiddenFor( model => model.Token )
				
				<div class="reg-header">
					<h2>Reset your password</h2>
				</div>

				@Html.ValidationSummary( true )

				<p>Please enter a new password.</p>

				<br />

				@Html.EditorFor( model => model.RegisterPassword )
				<div class="progress" style="height:6px">
					<div class="progress-bar" id="password_strength_bar"></div>
				</div>

				@Html.EditorFor( model => model.RegisterPasswordRetype )

				<br />
				<label class="checkbox">
					@Html.EditorFor( model => model.ClearSessions ) Log me out on every computer (use this if you think your account might be compromised)
				</label>

				<br />
				<br />

				<button id="signup" class="btn btn-lg btn-primary btn-block" type="submit">Reset password</button>
			}
		</div>
	</div>
</div>

@section Scripts {
	@Scripts.Render( "~/Scripts/ThirdParty/jqueryval" )
	@Scripts.Render( "~/Scripts/ThirdParty/zxcvbn" )
}
